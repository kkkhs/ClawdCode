{
  "name": "clawdcode",
  "version": "0.1.0",
  "description": "A CLI Coding Agent inspired by Claude Code",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "clawdcode": "./dist/main.js"
  },
  "scripts": {
    "dev": "bun run src/main.tsx",
    "build": "bun build src/main.tsx --outdir dist --target node && chmod +x dist/main.js",
    "start": "bun dist/main.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cli",
    "ai",
    "coding-agent",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "ink": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "openai": "^4.77.0",
    "react": "^19.0.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.0",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
